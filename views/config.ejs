<div class="row mb-4">
    <div class="col-md-12">
        <h2><i class="bi bi-gear"></i> Azure AD Configuration</h2>
    </div>
</div>

<!-- Configuration Form -->
<div class="card">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-microsoft"></i> Azure AD Application Settings</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> Configure your Azure AD application credentials. All data is stored locally in your browser.
        </div>
        
        <form id="configForm">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="clientId" class="form-label">Client ID <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="clientId" required 
                               value="<%= config.clientId || '' %>" 
                               placeholder="00000000-0000-0000-0000-000000000000">
                        <div class="form-text">The Application (client) ID from your Azure AD app registration</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="tenantId" class="form-label">Tenant ID <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="tenantId" required 
                               value="<%= config.tenantId || '' %>" 
                               placeholder="00000000-0000-0000-0000-000000000000">
                        <div class="form-text">Your Azure AD tenant (directory) ID</div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="clientSecret" class="form-label">Client Secret <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" id="clientSecret" required 
                               value="<%= config.clientSecret || '' %>"
                               placeholder="Enter client secret">
                        <div class="form-text">The client secret value (not the secret ID)</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="authority" class="form-label">Authority URL (Optional)</label>
                        <input type="text" class="form-control" id="authority" 
                               value="<%= config.authority || '' %>"
                               placeholder="https://login.microsoftonline.com/{tenant-id}">
                        <div class="form-text">Leave empty to use default tenant-based authority</div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label for="redirectUri" class="form-label">Redirect URI</label>
                        <input type="text" class="form-control" id="redirectUri" 
                               value="<%= config.redirectUri || '' %>"
                               placeholder="http://localhost:3000/api/auth/callback">
                        <div class="form-text">The redirect URI configured in your Azure AD app registration. Leave empty to use default localhost callback.</div>
                    </div>
                </div>
            </div>
            
            <!-- Scopes Configuration -->
            <div class="mb-4">
                <label class="form-label">Configured Scopes</label>
                <div class="card">
                    <div class="card-body">
                        <div id="scopesList" class="mb-3">
                            <!-- Current scopes will be displayed here -->
                        </div>
                        
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" id="newScopeInput" 
                                   placeholder="Add new scope (e.g., https://graph.microsoft.com/.default)">
                            <button class="btn btn-outline-primary" type="button" onclick="addScope()">
                                <i class="bi bi-plus"></i> Add Scope
                            </button>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-text mb-2"><strong>Quick Add Common Scopes:</strong></div>
                                
                                <!-- Microsoft Graph Scopes -->
                                <div class="mb-3">
                                    <h6 class="text-primary">Microsoft Graph</h6>
                                    <div class="btn-group-vertical d-block">
                                        <button type="button" class="btn btn-sm btn-outline-info mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/User.Read')">
                                            <i class="bi bi-person"></i> User.Read - Read user profile
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/User.ReadWrite')">
                                            <i class="bi bi-person-gear"></i> User.ReadWrite - Read and write user profile
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/Calendars.Read')">
                                            <i class="bi bi-calendar"></i> Calendars.Read - Read user calendars
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-info mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/Calendars.ReadWrite')">
                                            <i class="bi bi-calendar-check"></i> Calendars.ReadWrite - Read and write user calendars
                                        </button>
                                    </div>
                                </div>
                                <!-- Microsoft Teams & Chat Scopes -->
                                <div class="mb-3">
                                    <h6 class="text-purple" style="color: #6f42c1;">Microsoft Teams & Chat</h6>
                                    <div class="btn-group-vertical d-block">
                                        <!-- Chat Scopes -->
                                        <button type="button" class="btn btn-sm btn-outline-secondary mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/Chat.Read')"
                                                style="border-color: #6f42c1; color: #6f42c1;">
                                            <i class="bi bi-chat"></i> Chat.Read - Read user's chats
                                        </button>
                                        <button type="button" class="btn btn-sm btn-outline-secondary mb-1" 
                                                onclick="addQuickScope('https://graph.microsoft.com/Chat.ReadWrite')"
                                                style="border-color: #6f42c1; color: #6f42c1;">
                                            <i class="bi bi-chat-square-text"></i> Chat.ReadWrite - Read and write chats
                                        </button>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Save Configuration
                </button>
            </div>
        </form>
        
        <div id="configResult" class="mt-3"></div>
    </div>
</div>

<!-- Configuration Status -->
<div class="card mt-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle"></i> Configuration Status</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-6 <%= config.clientId ? 'text-success' : 'text-muted' %>">
                        <i class="bi bi-<%= config.clientId ? 'check-circle-fill' : 'circle' %>"></i>
                    </div>
                    <small class="text-muted">Client ID</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-6 <%= config.tenantId ? 'text-success' : 'text-muted' %>">
                        <i class="bi bi-<%= config.tenantId ? 'check-circle-fill' : 'circle' %>"></i>
                    </div>
                    <small class="text-muted">Tenant ID</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-6 <%= config.clientSecret ? 'text-success' : 'text-muted' %>">
                        <i class="bi bi-<%= config.clientSecret ? 'check-circle-fill' : 'circle' %>"></i>
                    </div>
                    <small class="text-muted">Client Secret</small>
                </div>
            </div>
            <div class="col-md-3">
                <div class="text-center">
                    <div class="display-6 <%= (config.clientId && config.tenantId && config.clientSecret) ? 'text-success' : 'text-warning' %>">
                        <i class="bi bi-<%= (config.clientId && config.tenantId && config.clientSecret) ? 'shield-check' : 'shield-exclamation' %>"></i>
                    </div>
                    <small class="text-muted">Ready</small>
                </div>
            </div>
        </div>
        
        <hr>
        
        <div class="alert alert-<%= (config.clientId && config.tenantId && config.clientSecret) ? 'success' : 'warning' %> mb-0">
            <i class="bi bi-<%= (config.clientId && config.tenantId && config.clientSecret) ? 'check-circle' : 'exclamation-triangle' %>"></i>
            <% if (config.clientId && config.tenantId && config.clientSecret) { %>
                Configuration is complete. You can now generate access tokens.
            <% } else { %>
                Please configure all required fields to generate access tokens.
            <% } %>
        </div>
    </div>
</div>